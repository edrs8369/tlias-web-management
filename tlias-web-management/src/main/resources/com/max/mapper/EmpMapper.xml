<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.max.mapper.EmpMapper">
    <select id="list" resultType="com.max.pojo.Emp">
        select emp.*, dept.name deptName from emp left join dept on emp.dept_id = dept.id

        <!-- 用where標籤，可自動去除多餘的and或缺and會自動補齊, 用 1=1 就不需用<where>標籤 -->
        <where>
            <if test="name != null and name != '' ">
                <!-- 用concat拼接， 避免#{}在''裡面， 會被認為純? -->
                emp.name like concat('%',#{name},'%')
            </if>

            <if test="gender != null">
                and emp.gender = #{gender}
            </if>

            <if test="begin != null and end != null">
                and emp.entry_date between #{begin} and #{end}
            </if>
        </where>
        order by emp.update_time desc
    </select>
</mapper>